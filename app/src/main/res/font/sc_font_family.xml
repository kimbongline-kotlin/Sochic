<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- normal -->
    <font
            android:font="@font/gothica1_regular"
            android:fontStyle="normal"
            android:fontWeight="400"
            app:font="@font/gothica1_regular"
            app:fontStyle="normal"
            app:fontWeight="400" />

    <!-- italic -->
    <font
            android:font="@font/gothica1_medium"
            android:fontStyle="italic"
            android:fontWeight="400"
            app:font="@font/gothica1_medium"
            app:fontStyle="italic"
            app:fontWeight="400" />

    <!-- bold -->
    <font
            android:font="@font/gothica1_semibold"
            android:fontStyle="normal"
            android:fontWeight="700"
            app:font="@font/gothica1_semibold"
            app:fontStyle="normal"
            app:fontWeight="700" />

</font-family>