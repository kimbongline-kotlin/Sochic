<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginFolder.AgreeActivity" android:background="@color/whiteColor">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/back" android:id="@+id/backBtn"
            android:padding="10dp" android:layout_marginLeft="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp" app:srcCompat="@drawable/main_logo"
            android:id="@+id/imageView4" android:layout_centerInParent="false"
            android:layout_marginTop="50dp" android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="다음"
            android:layout_width="match_parent"
            android:layout_height="45dp" android:id="@+id/nextBtn" android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp" android:layout_alignParentBottom="true" android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" android:textSize="14sp" android:textColor="@color/whiteColor"
            android:background="@color/blackColor"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/imageView4"
            android:layout_above="@+id/nextBtn" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="40dp">
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginBottom="5dp">

                <WebView
                        android:id="@+id/sWebView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="35dp" />
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" android:id="@+id/serviceBtn">

                    <TextView
                            android:text="서비스 이용 약관(필수)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:layout_centerVertical="true" android:layout_alignParentLeft="true"/>
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radio_btn" android:layout_centerVertical="true"
                            android:layout_alignParentLeft="false" android:layout_alignParentEnd="true"
                            android:id="@+id/serviceRadio"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">

                <WebView
                        android:id="@+id/pWebView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="35dp" />
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp" android:id="@+id/privateBtn">

                    <TextView
                            android:text="개인정보 취급방침(필수)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:layout_centerVertical="true" android:layout_alignParentLeft="true"/>
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radio_btn" android:layout_centerVertical="true"
                            android:layout_alignParentLeft="false" android:layout_alignParentEnd="true"
                            android:id="@+id/privateRadio"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/allAgreeBtn">

            <TextView
                    android:text="전체동의"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="13sp"
                    android:layout_centerVertical="true" android:layout_alignParentLeft="true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/allAgreeRadio"
                    android:button="@drawable/radio_btn" android:layout_centerVertical="true"
                    android:layout_alignParentLeft="false" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>