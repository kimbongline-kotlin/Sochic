<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginFolder.AgreeActivity" android:background="@color/whiteColor">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/back" android:id="@+id/backBtn"
            android:padding="10dp" android:layout_marginLeft="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp" app:srcCompat="@drawable/main_logo"
            android:id="@+id/imageView4" android:layout_centerInParent="false"
            android:layout_marginTop="50dp" android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="로그인"
            android:layout_width="match_parent"
            android:layout_height="45dp" android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp" android:layout_alignParentBottom="true" android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" android:textSize="14sp" android:textColor="@color/whiteColor"
            android:background="@color/blackColor" android:id="@+id/loginBtn"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/imageView4"
            android:layout_above="@+id/loginBtn" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="아이디 + 비밀번호 찾기"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:padding="15dp"
                    android:gravity="center" android:layout_marginBottom="15dp" android:textStyle="italic"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/lineColor" android:padding="40dp">
                <TextView
                        android:text="emailLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/emailLabel" android:paddingTop="5dp"
                        android:paddingBottom="5dp" android:textSize="14sp" android:textColor="@color/blackColor"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/dateLabel" android:paddingTop="5dp"
                        android:paddingBottom="5dp" android:textSize="14sp" android:textColor="@color/blackColor"/>
            </LinearLayout>
            <TextView
                    android:text="해당 아이디(이메일)로 안내 메일을 발송하였습니다."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:gravity="center"
                    android:textSize="13sp" android:textColor="@color/borderLineColor" android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>