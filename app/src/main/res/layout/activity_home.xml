<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/whiteColor"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFolder.HomeActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="60dp" android:id="@+id/frameLayer">

    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" android:layout_alignParentBottom="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/homeBtn">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/home_icon"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="false" android:layout_alignParentRight="false"
                        android:layout_centerInParent="true" android:id="@+id/homeIcon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/brandBtn">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/brand_icon"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="false" android:layout_alignParentRight="false"
                        android:layout_centerInParent="true" android:id="@+id/brandIcon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/searchBtn">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/search_icon"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="false" android:layout_alignParentRight="false"
                        android:layout_centerInParent="true" android:id="@+id/searchIcon"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/mypageBtn">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/mypage_icon"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="false" android:layout_alignParentRight="false"
                        android:layout_centerInParent="true" android:id="@+id/mypageIcon"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>