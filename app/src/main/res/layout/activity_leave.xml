<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        tools:context=".MyPageFolder.FollowingActivity">

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lineColor" />

        <TextView
                android:id="@+id/titleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="탈퇴하기"
                android:textSize="16dp"
                android:textStyle="bold" />

        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="false"
                android:padding="15dp"
                app:srcCompat="@drawable/back" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" >

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/leaveBtn"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" >

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp">

                    <RadioButton
                            android:id="@+id/rBtn1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="타 유사 서비스 이용"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="속도가 느림"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="포인트, 쿠폰 등 혜택 불만"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="개인정보 변경으로 인한 재가입"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="자주 이용하지 않음"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="찾고자 하는 정보 부족"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="서비스 이용 방법이 어려움"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="개인정보 보안 우려"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    <RadioButton
                            android:id="@+id/rBtn9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_centerVertical="true"
                            android:button="@drawable/radio_btn"
                            android:paddingLeft="10dp"
                            android:text="기타"
                            android:textColor="@color/blackColor"
                            android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
                android:id="@+id/leaveBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/blackColor"
                android:text="탈퇴하기"
                android:textColor="@color/whiteColor"
                android:textStyle="normal" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>