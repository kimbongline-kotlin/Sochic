<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        tools:context=".ProductFolder.ProductContactWriteActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lineColor" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="문의하기"
                android:textSize="16dp" />

        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="false"
                android:padding="15dp"
                app:srcCompat="@drawable/popup_close" />

    </RelativeLayout>

    <Button
            android:id="@+id/writeBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="15dp"
            android:background="@color/blackColor"
            android:text="문의하기"
            android:textColor="@color/whiteColor" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/writeBtn"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

        <EditText
                android:id="@+id/titleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:ems="10"
                android:hint="문의제목을 입력해 주세요."
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/borderLineColor"
                android:textSize="14sp"
                android:textStyle="normal" />

        <View
                android:id="@+id/view20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor" />

        <EditText
                android:id="@+id/contentsEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:ems="10"
                android:gravity="start|top"
                android:hint="문의하실 내용을 입력해주세요."
                android:inputType="textMultiLine"
                android:minHeight="150dp"
                android:padding="15dp"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/borderLineColor"
                android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>