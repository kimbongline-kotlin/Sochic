<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        tools:context=".ProductFolder.ReviewMoreActivity">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <RelativeLayout
                    android:id="@+id/profileChangeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="프로필 설정"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pushBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="푸시알람 설정"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />

                <Switch
                        android:id="@+id/pushSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/guidBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="이용가이드"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/contactBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="1:1문의"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/sTermBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="서비스 이용약관"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pTermBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="개인정보 취급방침"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="버전정보"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lineColor" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/outBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/arrow" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="탈퇴하기"
                        android:textColor="@color/blackColor"
                        android:textStyle="normal" />

            </RelativeLayout>

            <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="30dp"
                    android:background="@color/blackColor"
                    android:text="로그아웃"
                    android:textColor="@color/whiteColor" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lineColor" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="설정"
                android:textSize="16dp" />

        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="false"
                android:padding="15dp"
                app:srcCompat="@drawable/back" />

    </RelativeLayout>

</RelativeLayout>