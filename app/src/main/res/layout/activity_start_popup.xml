<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashFolder.StartPopupActivity" android:background="@color/whiteColor">

    <com.youth.banner.Banner
            android:layout_width="match_parent"
            app:image_scale_type="center_crop"
            android:layout_height="match_parent" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/sImageView" android:layout_marginBottom="50dp"/>

    <com.sochic.sochic.Util.Indicator.PageIndicatorView
            android:id="@+id/sIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            app:piv_animationDuration="300"
            app:piv_animationType="scale"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_radius="4dp"
            app:piv_selectedColor="@color/blackColor"
            app:piv_unselectedColor="@color/borderLineColor" />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_alignParentBottom="true"
            android:background="@color/borderLineColor" android:layout_centerVertical="true">

        <Button
                android:text="닫기"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/closeBtn" android:layout_alignParentEnd="true"
                android:textSize="13sp" android:textColor="@color/whiteColor"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        <RadioButton
                android:text="오늘 하루만 보지 않기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/todayRadioBtn"
                android:button="@drawable/white_radio_btn" android:paddingLeft="10dp" android:textSize="13sp"
                android:textColor="@color/whiteColor" android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>
    </RelativeLayout>
</RelativeLayout>