<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <View
                android:id="@+id/view53"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout45"
                android:layout_width="109dp"
                android:layout_height="40dp"
                android:gravity="center"
               >

            <TextView
                    android:id="@+id/optNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/borderLineColor"
                    android:textSize="12sp" />
        </RelativeLayout>

        <View
                android:id="@+id/view52"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout43"
                android:layout_width="109dp"
                android:layout_height="40dp"
                android:gravity="center"
                 >

            <TextView
                    android:id="@+id/optItemLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/borderLineColor"
                    android:textSize="12sp" />
        </RelativeLayout>

        <View
                android:id="@+id/view49"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout33"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                 >

            <EditText
                    android:id="@+id/addPriceEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/borderLineColor"
                    android:textSize="12sp" />
        </RelativeLayout>

        <View
                android:id="@+id/view48"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout32"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                 >

            <EditText
                    android:id="@+id/cntEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/borderLineColor"
                    android:textSize="12sp" />
        </RelativeLayout>

        <View
                android:id="@+id/view47"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout31"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                 >

            <TextView
                    android:id="@+id/stateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/borderLineColor"
                    android:textSize="12sp" />
        </RelativeLayout>

        <View
                android:id="@+id/view46"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

        <RelativeLayout
                android:id="@+id/RelativeLayout22"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"

                    android:src="@drawable/delete" />
        </RelativeLayout>

        <View
                android:id="@+id/view54"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />
    </LinearLayout>

    <View
            android:id="@+id/view55"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor" />

</LinearLayout>