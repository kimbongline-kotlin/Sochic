<?xml version="1.0" encoding="utf-8"?>
<com.sochic.sochic.Util.Alert.ScDialog
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#00000000"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/moreLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/whiteColor"
            android:orientation="vertical"
            android:visibility="gone">

        <TextView
                android:id="@+id/moreShareBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/gothica1_regular"
                android:gravity="center"
                android:text="컨텐츠 공유"
                android:textSize="13sp" />

        <View
                android:id="@+id/moreLines"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor" />

        <TextView
                android:id="@+id/moreFollowBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/gothica1_regular"
                android:gravity="center"
                android:text="팔로우"
                android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/leavePreLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/whiteColor"
            android:orientation="vertical"
            android:visibility="gone">

        <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gothica1_semibold"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:text="정말 탈퇴하시겠습니까?"
                android:textColor="@color/blackColor"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gothica1_regular"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:text="탈퇴 시, 저장하신 모든\n찜상품 및 컨텐츠 정보가 삭제됩니다."
                android:textColor="@color/blackColor"
                android:textSize="12sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/lPreCancelBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="7.5dp"
                    android:layout_weight="1"
                    android:background="@color/borderLineColor"
                    android:fontFamily="@font/gothica1_regular"
                    android:text="취소"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp" />

            <Button
                    android:id="@+id/lPreOkBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@color/blackColor"
                    android:fontFamily="@font/gothica1_regular"
                    android:text="확인"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/leaveComLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/whiteColor"
            android:orientation="vertical"
            android:visibility="gone">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gothica1_regular"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:text="탈퇴가 완료되었습니다.\n이용해주셔서 감사합니다."
                android:textColor="@color/blackColor"
                android:textSize="12sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/lComBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/blackColor"
                    android:fontFamily="@font/gothica1_regular"
                    android:text="확인"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</com.sochic.sochic.Util.Alert.ScDialog>